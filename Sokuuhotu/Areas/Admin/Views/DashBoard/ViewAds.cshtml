@model IEnumerable<BAW.Models.Product>

@{
    ViewBag.Title = "ViewAds";
    Layout = "~/Views/Shared/_BuyerSellerLayout.cshtml";
}

<!--************************************
             Dashboard Banner Start
     *************************************-->
<div class="tg-dashboardbanner">
    <h1>All Ads</h1>

</div>
<!--************************************
        Dashboard Banner End
*************************************-->
<!--************************************
                Main Start
        *************************************-->
<main id="tg-main" class="tg-main tg-haslayout">
    <!--************************************
            Section Start
    *************************************-->
    <section class="tg-dbsectionspace tg-haslayout">
        <div class="row">

            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="tg-dashboardbox">
                    <div class="tg-dashboardboxtitle">
                        <h2>Products <span style="color:#ed193e">Count: @Model.Count()</span></h2>

                    </div>
                    <div class="tg-dashboardholder">

                        <table id="tg-adstype" class="table tg-dashboardtable tg-tablemyads">
                            <thead>
                                <tr>

                                    <th>Photo</th>
                                    <th>Title</th>
                                    <th>Post Date</th>
                                    <th>End Date</th>
                                    <th>Auction Status</th>



                                    <th>Action </th>



                                </tr>
                            </thead>
                            <tbody>



                                @foreach (var item in Model)
                                {

                                    <tr data-category="active">

                                        <td data-title="Photo"><img src="@Url.Content(item.MainImageUrl)" alt="image description" style="height:80px;width:120px;margin-left:30px"></td>
                                        <td data-title="Name">
                                            <a href="@Url.Action("ProductDetails","Store",new {id= item.ProductId,area="" })"> <h3 style="color:rgb(237, 25, 62); text-align:center">@item.ProductName</h3></a>

                                        </td>
                                        <td data-title="Start Date"><span class="tg-adstatus tg-adstatusactive">@item.StartDate.ToShortDateString()</span></td>
                                        <td data-title="End Date"><span class="tg-adstatus tg-adstatusactive">@item.EndDate.ToShortDateString()</span></td>

                                        @if (item.AuctionEnd==false)
                                        {
                                            <td data-title="Auction Status"><span class="tg-adstatus tg-adstatusactive">Open</span></td>

                                        }
                                        else
                                        {
                                            <td data-title="Status"><span class="tg-adstatus tg-adstatusactive" style="background:#ed193e;">Closed</span></td>

                                        }



                                        <td data-title="Action">
                                            <div class="tg-btnsactions">
                                                <a class="tg-btnaction tg-btnactionview" href="@Url.Action("ProductDetails","Store", new { id = item.ProductId,area="" })"><i class="fa fa-eye"></i><small></small> </a>
                                                    <a class="tg-btnaction tg-btnactiondelete" href="@Url.Action("ItemDelete","DashBoard",new { id = item.ProductId })"><i class="fa fa-trash"></i></a>
                                            </div>
                                        </td>



                                    </tr>
                                }








                            </tbody>




                        </table>
                  
                    </div>
                </div>
            </div>

        </div>
    </section>
    <!--************************************
            Section End
    *************************************-->
</main>
<!--************************************
        Main End
*************************************-->


